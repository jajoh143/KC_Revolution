@model DOTNETWEB_KCREVOLUTION.Areas.Engage.Models.ContactViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Engage the World";
}

<div id="page-container">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <img style="height: auto; max-height: 60vh; margin: 25px auto;" class="img-responsive" src="@Url.Content("~/images/DSC_0033.jpg")" />
            </div>
        </div>
    </div>
    <div class="container-fluid" style="background-color: #d9d1b3;">
        <div class="container-fluid sub_banner">
            <div class="row" style="margin: 15px 0 15px;">
                    <div class="col-sm-6 col-sm-offset-3">
                        <p class="text-center">
                            <i style="font-size: 6rem;" class="fa  fa-pencil-square-o" aria-hidden="true"></i>
                            <h3 class="text-center">Contact Us</h3>
                        </p>
                    </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h2>Contact Info</h2>
                <p>
                    <a href="https://maps.google.com/maps?hl=en&q=500+W.+40th+St.+KCMO+64111&ie=UTF-8&hq=&hnear=0x87c0efdac1fe6935:0xf8487948118639b4,500+W+40th+St,+Kansas+City,+MO+64111&gl=us&ei=YKp0UJurDqTg2gWcnYGYCQ&ved=0CB4Q8gEwAA">
                        500 W. 40th St. Kansas City, MO 6411
                    </a>
                </p>
                <p>
                    Email: &nbsp;<a href="emailto:kcrevolutionoffice@gmail.com">kcrevolutionoffice@gmail.com</a><br />
                    Phone: &nbsp;<a href="1-816-931-1858">(816) 931-1858</a>
                </p>
                <h2>Service Times</h2>
                <p>
                    <b>Sundays: 11:30 AM</b>
                </p>
            </div>
            <div class="col-sm-6">
                <form asp-action="Contact"
                      method="post">
                    <h3>Quick Contact</h3>
                    <div class="form-group">
                        <label for="Name">Name:</label>
                        <input class="form-control" name="Name" type="text" />
                    </div>
                    <div class="form-group">
                        <label for="Phone">Phone Number:</label>
                        <input class="form-control" name="Phone" type="tel" />
                    </div>
                    <div class="form-group">
                        <label for="Email">Email:</label>
                        <input class="form-control" name="Email" type="email" />
                    </div>
                    <div class="form-group">
                        <label for="FormText">Question, Comment, or Prayer Request:</label>
                        <textarea class="form-control" name="FormText"></textarea>
                    </div>
                    <input type="submit" value="Send" />
                </form>
            </div>
        </div>
    </div>
</div>